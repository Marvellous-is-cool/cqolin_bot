<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Manage Links</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+5hb7U5P8m3NzpyNuz96D6eFxlu0cpVfj7D5ofT"
      crossorigin="anonymous"
    />
    <!-- Font Awesome CDN -->
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="home-container">
      <h1>Your Links</h1>

      <!-- Categories Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container-fluid">
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <% categories.forEach(function(category) { %>
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="#"
                  onclick="filterLinks('<%= category.name %>')"
                  ><%= category.name %></a
                >
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </nav>

      <div id="links">
        <% if (links.length > 0) { %> <% links.forEach(function(link) { %>
        <div class="link-box" data-category="<%= link.category %>">
          <img
            src="<%= link.thumbnail || '/path/to/default-thumbnail.png' %>"
            alt="Link Thumbnail"
          />
          <p><%= link.name %></p>
          <a href="<%= link.url %>" target="_blank">Go to Link</a>
        </div>
        <% }) %> <% } else { %>
        <p>Loading your links from LocalStorage...</p>
        <% } %>
      </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="bottom-nav navbar navbar-dark bg-dark fixed-bottom">
      <div class="container-fluid">
        <a href="/home" class="nav-item nav-link">
          <i class="fas fa-home"></i> Home
        </a>
        <a href="/create" class="nav-item nav-link">
          <i class="fas fa-plus-circle"></i> Create
        </a>
        <a href="/about" class="nav-item nav-link">
          <i class="fas fa-info-circle"></i> About
        </a>
        <a href="/updates" class="nav-item nav-link">
          <i class="fas fa-sync-alt"></i> Updates
        </a>
        <a href="/profile" class="nav-item nav-link">
          <i class="fas fa-user"></i> Profile
        </a>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoM4cpXrkJeeLXiw7cp9pxLxK1AO9iSNaFdHePffBcpX3hA"
      crossorigin="anonymous"
    ></script>

    <script>
      const links = <%= JSON.stringify(links) %>;

      function renderLinks(filteredLinks) {
        const linksContainer = document.getElementById("links");
        linksContainer.innerHTML = ""; // Clear existing links
        filteredLinks.forEach(link => {
          const linkBox = document.createElement("div");
          linkBox.className = "link-box";
          linkBox.setAttribute("data-category", link.category);
          linkBox.innerHTML = `
            <img src="${link.thumbnail || '/path/to/default-thumbnail.png'}" alt="Link Thumbnail" />
            <p>${link.name}</p>
            <a href="${link.url}" target="_blank">Go to Link</a>
          `;
          linksContainer.appendChild(linkBox);
        });
      }

      function filterLinks(category) {
        const filteredLinks = links.filter(link => link.category === category);
        renderLinks(filteredLinks);
      }

      // Initially render all links
      renderLinks(links);

      // If no links from Firebase, check LocalStorage
      const firebaseLinks = <%= JSON.stringify(links) %>;

      if (firebaseLinks.length === 0) {
        const localStorageLinks = JSON.parse(localStorage.getItem("userLinks")) || [];

        // Render LocalStorage links
        if (localStorageLinks.length > 0) {
          renderLinks(localStorageLinks);
        } else {
          document.getElementById("links").innerHTML = "<p>No links found in LocalStorage either.</p>";
        }
      } else {
        const localStorageLinks = JSON.parse(localStorage.getItem("userLinks")) || [];
        const combinedLinks = [...firebaseLinks, ...localStorageLinks];

        // Ensure no duplicate links (based on URL)
        const uniqueLinks = combinedLinks.reduce((acc, current) => {
          const x = acc.find(link => link.url === current.url);
          if (!x) {
            acc.push(current);
          }
          return acc;
        }, []);

        renderLinks(uniqueLinks);
      }
    </script>
  </body>
</html>
